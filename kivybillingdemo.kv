AnchorLayout:
    BoxLayout:
        size_hint: 0.6, None
        height: "60dp"
        orientation: 'vertical'

        Label
            text: "Donate to the developer"

        BoxLayout:
            spacing: "10dp"
            Button:
                text: "1€"
                on_press: app.donate(1)
            Button:
                text: "5€"
                on_press: app.donate(5)
            Button:
                text: "10€"
                on_press: app.donate(10)
            Button:
                text: "100€"
                on_press: app.donate(100)
